<!DOCTYPE html>
<html>
<%- include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/header.ejs') %>
      <main class="container">
        <section class="carousel-destacados">
          <h2 class="my-3">Productos destacados</h2>
          <div class="carousel-container">
            <button class="glider-prev-destacados"><i class="fas fa-chevron-left"></i></button>
            <div class="carousel-elements-destacados">
              <% destacados.forEach(destacado=> { %>
                <div class="card">
                  <img src="<%= destacado.imagenes[0].link %>" class="card-img-top">
                  <div class="card-body d-flex flex-column justify-content-between">
                    <h6 class="card-title">
                      <%= destacado.nombre %>
                    </h6>
                    <div class="d-flex justify-content-around">
                      <h4>$<span id="price">
                          <%= destacado.precio %>
                        </span></h4>
                      <% if (destacado.descuento) { %>
                        <span>
                          <%= destacado.descuento %>% OFF
                        </span>
                        <% } %>
                    </div>
                    <div class="">
                      <a href="#" class="h3 text-success"><i class="fas fa-info-circle"></i></a>
                      <a href="#" class="btn-add-cart h3" onclick="agregarItem(event,'<%=destacado.id%>')"><i
                          class="fas fa-cart-plus"></i></a>
                    </div>
                  </div>
                </div>
            <% }) %>
          </div>
          <button class="glider-next-destacados"><i class="fas fa-chevron-right"></i></button>
          </div>
          <div role="tablist" class="dots-detacados"></div>

        </section>
        <section>

        </section>

      </main>
      <%- include('./partials/footer.ejs') %>

  </body>

</html>